        <script>
            function calculateCorrectedCalcium() {
                var serCalcium = parseFloat(document.getElementById('serum_calcium').value);
                var ptAlbumin = parseFloat(document.getElementById('patient_albumin').value);
                var nlAlbumin = parseFloat(document.getElementById('normal_albumin').value);
                   
                var correctedCalcium = (serCalcium + 0.8*(4-ptAlbumin));
                   
                var output_box = document.getElementById('output_result');
		output_box.textContent = correctedCalcium;
            }
    
        </script>
            
        
